<p id="notice"><%= notice %></p>

<h1>Repositories for <%= @category.name %></h1>

<table>
  <thead>
    <tr>
      <th>Repository</th>
      <th>Owner</th>
      <th>Stars</th>
      <th>Forks</th>
      <th>Category</th>
      <th>Technology</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td><%= repository.name %></td>
        <td><%= repository.owner %></td>
        <td><%= repository.stars_count %></td>
        <td><%= repository.forks_count %></td>
        <td><%= repository.category.name %></td>
        <td><%= repository.category.technology.name %></td>
        
        <td><%= link_to 'Show', repository %></td>
        <td><%= link_to 'Edit', edit_repository_path(repository) %></td>
        <td><%= link_to 'Destroy', repository, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
