<p id="notice"><%= notice %></p>

<h1>New Repository</h1>

<%= form_with(url: repositories_path) do |form| %>
  <div class="field">
    <%= form.label :technology %>
    <%= form.text_field :technology, required: true %>
  </div> 

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, required: true %>
  </div>

  <div class="field">
    <%= form.label :repository %>
    <%= form.text_field :repository, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', url_for(:back) %>
